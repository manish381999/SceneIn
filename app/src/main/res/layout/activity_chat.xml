<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_background"
    tools:context=".chat.persentation.screens.ChatActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/chat_toolbar_color"
        app:contentInsetStart="0dp"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:src="@drawable/ic_arrow_back_ios"
                app:tint="@color/gray500" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_toolbar_profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_profile_placeholder" />

            <TextView
                android:id="@+id/tv_toolbar_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                tools:text="Gunjan Jain" />

            <ImageButton
                android:id="@+id/iv_audio_call"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Audio Call"
                android:src="@drawable/ic_audio_call"
                app:tint="@color/gray500" />

            <ImageButton
                android:id="@+id/iv_video_call"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Video Call"
                android:src="@drawable/ic_video_call"
                app:tint="@color/gray500"  />
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/message_input_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:listitem="@layout/item_chat_message_sent" />

    <LinearLayout
        android:id="@+id/message_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/input_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="24dp"
            android:layout_marginBottom="@dimen/dp_1_dsa"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|bottom"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_add_attachment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add attachment"
                    android:src="@drawable/ic_add_attachment"
                    app:tint="@color/colorOnSurfaceVariant" />

                <EditText
                    android:id="@+id/et_message_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Message..."
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="5"
                    android:minHeight="48dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="?attr/colorOnSurfaceVariant" />

                <ImageButton
                    android:id="@+id/btn_open_camera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Open camera"
                    android:src="@drawable/ic_camera"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="Send Message"
            android:src="@drawable/ic_send"
            app:backgroundTint="?attr/colorSecondary"
            app:elevation="2dp"
            app:tint="@android:color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>