<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    tools:context=".tickets.presentation.screens.ManageListingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back_ios"
            app:title="Edit Your Listing"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.App.ToolbarTitle.Compact" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray100" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/_80sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="EVENT INFORMATION (READ-ONLY)"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input_disabled"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_11ssp"
                    tools:text="Chennai Super Kings VS Royal Challengers Bangalore" />

                <TextView
                    android:id="@+id/tvEventVenue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input_disabled"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_10ssp"
                    tools:text="MA Chidambaram Stadium, Chennai" />

                <TextView
                    android:id="@+id/tvEventDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input_disabled"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_10ssp"
                    tools:text="Thu, 31 Jul 2025 • 08:00 PM" />

                <TextView
                    android:id="@+id/etNumberOfTickets"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_input_disabled"
                    android:enabled="false"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_10ssp"
                    tools:text="3 Ticket(s)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@color/gray100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="UPDATE YOUR SELLING PRICE"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_9ssp" />

                <TextView
                    android:id="@+id/tvOriginalPriceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/poppins"
                    android:textSize="@dimen/_10ssp"
                    tools:text="Original price was ₹1. You cannot list for higher." />

                <EditText
                    android:id="@+id/etSellingPrice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_input"
                    android:fontFamily="@font/poppins"
                    android:hint="Enter new price (₹)"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:textSize="@dimen/_11ssp"
                    tools:text="1.00" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@color/gray100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Remove Listing"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/poppins"
                    android:text="This will remove your ticket from the marketplace. It will not be deleted from your history."
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/_10ssp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelistTicket"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Delist This Ticket"
                    android:textColor="@color/colorError"
                    android:textSize="@dimen/_10ssp"
                    app:strokeColor="@color/colorError" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/bottomButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?attr/colorSurface"
            android:elevation="@dimen/_8sdp"
            android:padding="@dimen/_12sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Save Price Changes"
                android:textSize="@dimen/_11ssp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_4sdp"
                android:indeterminateTint="@color/white"
                android:visibility="gone" />
        </FrameLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>