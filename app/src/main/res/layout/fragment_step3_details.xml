<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Who can join?"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_18ssp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Maximum Participants"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/etMaxParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/edit_text_background_selector"
                    android:hint="e.g., 50"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tvMaxParticipantsError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/textError"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/poppins"
                    android:text="Age Restrictions"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_12ssp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:minHeight="@dimen/_40sdp">

                    <ProgressBar
                        android:id="@+id/ageProgressBar"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_gravity="center" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:chipSpacingVertical="@dimen/_4sdp"
                        app:singleSelection="true" />

                    <LinearLayout
                        android:id="@+id/ageErrorLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvAgeErrorMsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/textSecondary"
                            tools:text="Failed to load age groups" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRetryAge"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry" />
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAgeError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/textError"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Tickets &amp; Pricing"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_18ssp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <RadioGroup
                    android:id="@+id/rgEventType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbFree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Free Event"
                        android:textColor="@color/radio_text_color_selector"
                        android:textSize="@dimen/_12ssp" />

                    <RadioButton
                        android:id="@+id/rbPaid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Paid Event"
                        android:textColor="@color/radio_text_color_selector"
                        android:textSize="@dimen/_12ssp" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/priceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Ticket Price (â‚¹)"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etTicketPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edit_text_background_selector"
                        android:hint="Enter price per ticket"
                        android:inputType="numberDecimal"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvPriceError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/textError"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>