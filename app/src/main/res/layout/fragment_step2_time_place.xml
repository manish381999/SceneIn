<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="When is this happening?"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_18ssp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Date"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/edit_text_background_selector"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:focusable="false"
                    android:hint="Pick a date"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tvDateError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/textError"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Start Time"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/etStartTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/edit_text_background_selector"
                            android:focusable="false"
                            android:hint="Start Time"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvStartTimeError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:textColor="@color/textError"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="End Time"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/etEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_input"
                            android:focusable="false"
                            android:hint="End Time"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Where is this happening?"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_18ssp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <RadioGroup
                    android:id="@+id/rgLocationMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbInPerson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="In-Person"
                        android:textColor="@color/radio_text_color_selector"
                        android:textSize="@dimen/_12ssp"/>

                    <RadioButton
                        android:id="@+id/rbOnline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/radio_background_selector"
                        android:button="@null"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Online"
                        android:textColor="@color/radio_text_color_selector"
                        android:textSize="@dimen/_12ssp"/>
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/inPersonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Venue / Address"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etVenueSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edit_text_background_selector"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="Search for a venue or address"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvAddressError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/textError"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_12sdp"
                        app:cardElevation="0dp"
                        tools:visibility="visible">

                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPredictions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onlineContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Meeting Link"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/etMeetingLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edit_text_background_selector"
                        android:hint="https://zoom.us/j/..."
                        android:inputType="textUri"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvLinkError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:textColor="@color/textError"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>