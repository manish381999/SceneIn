<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_error="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="8dp" />
            <stroke android:width="1.5dp" android:color="@color/colorError" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="8dp" />
            <stroke android:width="1.5dp" android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/gray200" />
        </shape>
    </item>
</selector>