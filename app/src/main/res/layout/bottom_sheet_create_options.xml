<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="@dimen/_24sdp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_semibold"
        android:text="Create"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/option_create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="@dimen/_16sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:padding="@dimen/_12sdp"
        android:text="Create a New Event"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/ic_create"
        app:drawableTint="@color/colorPrimary" />

    <TextView
        android:id="@+id/option_sell_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:drawablePadding="@dimen/_16sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:padding="@dimen/_12sdp"
        android:text="Sell a Ticket"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/ic_ticket"
        app:drawableTint="@color/colorPrimary" />

</LinearLayout>