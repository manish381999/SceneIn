<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivHostProfilePic"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_color="@color/colorSurface"
            app:civ_border_width="2dp"
            app:civ_border="false"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvHostUseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_10ssp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/ivHostProfilePic"
            app:layout_constraintTop_toTopOf="@id/ivHostProfilePic"
            app:layout_constraintBottom_toBottomOf="@id/ivHostProfilePic"
            tools:text="Global Startups Club" />

        <ImageView
            android:id="@+id/imageBanner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivHostProfilePic"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tvHostChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_transparent_button"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="Host"
            android:textColor="@color/textOnPrimary"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/imageBanner"
            app:layout_constraintTop_toTopOf="@id/imageBanner"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_transparent_button"
            android:fontFamily="@font/poppins"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="@id/imageBanner"
            app:layout_constraintTop_toTopOf="@id/imageBanner"
            tools:text="Outdoor" />

        <FrameLayout
            android:id="@+id/participants_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/imageBanner"
            app:layout_constraintStart_toStartOf="@id/imageBanner"
            app:layout_constraintTop_toBottomOf="@id/imageBanner">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivParticipant3"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="36dp"
                app:civ_border_color="@color/colorSurface"
                app:civ_border_width="2dp"
                tools:src="@tools:sample/avatars[2]" />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivParticipant2"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="18dp"
                app:civ_border_color="@color/colorSurface"
                app:civ_border_width="2dp"
                tools:src="@tools:sample/avatars[1]" />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ivParticipant1"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                app:civ_border_color="@color/colorSurface"
                app:civ_border_width="2dp"
                tools:src="@tools:sample/avatars[0]" />
        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/image_content_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="participants_container, imageBanner" />

        <TextView
            android:id="@+id/tvParticipantsSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_content_barrier"
            tools:text="Gunjain and 4 others have joined" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/_14ssp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/tvParticipantsSummary"
            app:layout_constraintStart_toStartOf="@id/tvParticipantsSummary"
            app:layout_constraintTop_toBottomOf="@id/tvParticipantsSummary"
            tools:text="Startup Networking" />

        <TextView
            android:id="@+id/tvEventDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/tvEventName"
            app:layout_constraintTop_toBottomOf="@id/tvEventName"
            app:layout_constraintEnd_toEndOf="@id/tvEventName"
            tools:text="Sat, Aug 30 • 10:00 AM" />

        <TextView
            android:id="@+id/tvEventVenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/_10ssp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/tvEventDistance"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/tvEventDateTime"
            app:layout_constraintTop_toBottomOf="@id/tvEventDateTime"
            tools:text="VGP water park, Chennai - 600004" />

        <TextView
            android:id="@+id/tvEventDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/tvEventVenue"
            app:layout_constraintStart_toEndOf="@id/tvEventVenue"
            app:layout_constraintEnd_toEndOf="@id/tvEventName"
            tools:text="• 1.2 km"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/action_bar_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/tvEventName"
            app:layout_constraintEnd_toEndOf="@id/tvEventName"
            app:layout_constraintTop_toBottomOf="@id/tvEventVenue">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/join_button_text_color_selector"
                android:background="@drawable/bg_join_button_selector"
                app:backgroundTint="@null"
                app:cornerRadius="@dimen/_12sdp"
                tools:text="Join"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_action_share"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_share_outline"
                android:padding="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"/>

            <ImageView
                android:id="@+id/iv_action_bookmark"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_bookmark_outline"
                android:padding="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_color" />

</LinearLayout>