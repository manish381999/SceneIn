<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When the EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface"/> <!-- Inner fill -->
            <stroke
                android:width="2dp"
                android:color="@color/gray200"/> <!-- Border color when focused -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface"/> <!-- Inner fill -->
            <stroke
                android:width="1dp"
                android:color="@color/gray200"/> <!-- Default border color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
