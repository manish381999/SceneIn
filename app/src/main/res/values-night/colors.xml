<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- VibeIn "Foundation" Palette - Dark Theme -->

    <!-- I. PRIMARY BRAND COLOR -->
    <color name="colorPrimary">#0A84FF</color>          <!-- A brighter, accessible blue that pops on a dark background. -->
    <color name="colorPrimaryVariant">#22374E</color>  <!-- The darker, muted blue for sent bubbles. Like WhatsApp dark mode. -->
    <color name="colorSecondary">#0A84FF</color>
    <color name="colorSecondaryVariant">#0056B3</color>
    <color name="colorOnPrimary">#FFFFFF</color>
    <color name="colorOnSecondary">#FFFFFF</color>

    <!-- II. NEUTRAL FOUNDATION -->
    <!-- Background & Surface -->
    <color name="colorBackground">#000000</color>     <!-- True black for OLED screens. -->
    <color name="colorSurface">#1C1C1E</color>         <!-- Standard dark grey for cards. -->
    <color name="colorSurfaceVariant">#2C2C2E</color>  <!-- The standard received chat bubble color in dark mode. -->
    <color name="colorOnSurfaceVariant">#FFFFFF</color>

    <!-- Text Colors -->
    <color name="textPrimary">#FFFFFF</color>         <!-- Pure white for highest contrast on dark backgrounds. -->
    <color name="textSecondary">#8E8E93</color>       <!-- Standard secondary text color for dark mode. -->
    <color name="textOnPrimary">#FFFFFF</color>
    <color name="textOnSecondary">#FFFFFF</color>
    <color name="textError">#FF453A</color>           <!-- Brighter error red. -->
    <!-- Error & Grays (Inverted) -->
    <color name="colorError">#FF453A</color>
    <color name="gray100">#3A3A3C</color>
    <color name="gray200">#2C2C2E</color>
    <color name="gray300">#1C1C1E</color>
    <color name="gray400">#8E8E93</color>
    <color name="gray500">#6E6E73</color>
    <color name="gray600">#C7C7CC</color>
    <color name="gray700">#D1D1D6</color>
    <color name="gray800">#E5E5EA</color>
    <!-- System Colors -->
    <color name="black">#FFFFFF</color>
    <color name="white">#000000</color>


    <!-- III. SPECIFIC COMPONENT COLORS -->
    <color name="shimmer_background">#2C2C2E</color>

    <color name="colorSuccess">#30D158</color>       <!-- A brighter green that has good contrast on black/dark grey. -->
    <color name="colorOnSuccess">#FFFFFF</color>
    <color name="colorWarning">#FF9F0A</color>       <!-- A brighter orange for dark mode. -->
    <color name="colorOnWarning">#000000</color>

    <!-- Button Colors -->
    <color name="joinButtonColor">@color/colorPrimary</color>
    <color name="unjoinButtonColor">#30D158</color>  <!-- Brighter green for dark mode -->
    <color name="fullButtonColor">@color/gray300</color>

    <!-- Chat System (Following WhatsApp's established, proven model) -->
    <color name="chat_toolbar_color">@color/colorSurface</color>      <!-- Dark grey toolbar. -->
    <color name="chat_bubble_sent">@color/colorPrimaryVariant</color> <!-- The muted, dark blue bubble. -->
    <color name="chat_bubble_received">@color/colorSurfaceVariant</color> <!-- The dark grey bubble. -->
    <color name="chat_timestamp">@color/textSecondary</color>

    <color name="unread_background_color">#1A2533</color>



</resources>