<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    VibeIn "Foundation" Palette - Light Theme
    Strategy: Consistency, Clarity, and Familiarity. Inspired by proven UI principles.
    -->

    <!-- I. PRIMARY BRAND COLOR -->
    <color name="colorPrimary">#007BFF</color>          <!-- A clean, modern, trustworthy VibeIn Blue. -->
    <color name="colorPrimaryVariant">#D9E9FF</color>  <!-- The light, muted blue for chat bubbles. Like WhatsApp. -->
    <color name="colorSecondary">#007BFF</color>        <!-- Secondary actions use the same primary color for consistency. -->
    <color name="colorSecondaryVariant">#0056B3</color>  <!-- A darker shade for pressed states. -->
    <color name="colorOnPrimary">#FFFFFF</color>
    <color name="colorOnSecondary">#FFFFFF</color>

    <!-- II. NEUTRAL FOUNDATION -->
    <!-- Background & Surface -->
    <color name="colorBackground">#F2F2F7</color>     <!-- iOS-style light grey. Very clean. -->
    <color name="colorSurface">#FFFFFF</color>         <!-- Pure white for cards. -->
    <color name="colorSurfaceVariant">#EFEFF4</color>  <!-- The standard received chat bubble color. Like WhatsApp. -->
    <color name="colorOnSurfaceVariant">#000000</color>

    <!-- Text Colors -->
    <color name="textPrimary">#000000</color>         <!-- Pure black for highest contrast on white/light backgrounds. -->
    <color name="textSecondary">#6E6E73</color>       <!-- Standard secondary text color. -->
    <color name="textOnPrimary">#FFFFFF</color>
    <color name="textOnSecondary">#FFFFFF</color>
    <color name="textError">#D70015</color>           <!-- Standard error red. -->
    <!-- Error & Grays -->
    <color name="colorError">#D70015</color>
    <color name="gray100">#F2F2F7</color>
    <color name="gray200">#E5E5EA</color>
    <color name="gray300">#D1D1D6</color>
    <color name="gray400">#C7C7CC</color>
    <color name="gray500">#8E8E93</color>
    <color name="gray600">#6E6E73</color>
    <color name="gray700">#3A3A3C</color>
    <color name="gray800">#1C1C1E</color>
    <!-- System Colors -->
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>


    <!-- III. SPECIFIC COMPONENT COLORS -->
    <color name="shimmer_background">#E5E5EA</color>

    <!-- Button Colors (Clear states) -->
    <color name="joinButtonColor">@color/colorPrimary</color>
    <!-- We will use a dedicated green for 'unjoin' as it's a destructive-like action confirmation -->
    <color name="unjoinButtonColor">#34C759</color>
    <color name="fullButtonColor">@color/gray300</color>

    <!-- Chat System (Following WhatsApp's established, proven model) -->
    <color name="chat_toolbar_color">@color/colorBackground</color> <!-- Use the light grey background for a seamless look. -->
    <color name="chat_bubble_sent">@color/colorPrimaryVariant</color> <!-- Light, muted blue. Easy on the eyes. -->
    <color name="chat_bubble_received">@color/colorSurfaceVariant</color> <!-- A clear, neutral background. -->
    <color name="chat_timestamp">@color/textSecondary</color>
</resources>