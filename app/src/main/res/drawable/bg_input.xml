<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/colorSurface" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/gray200" />

    <!-- Optional padding inside input (if needed for older APIs) -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
