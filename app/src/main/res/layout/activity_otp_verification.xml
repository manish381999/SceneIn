<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back_ios"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="20sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We have sent a verification code to +91 9123141559"
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- OTP Boxes -->
    <LinearLayout
        android:id="@+id/otp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:weightSum="6">

        <!-- Use 6 EditTexts, or use OTP view library -->
        <EditText
            android:id="@+id/et_otp_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>

        <EditText
            android:id="@+id/et_otp_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>
        <EditText
            android:id="@+id/et_otp_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>
        <EditText
            android:id="@+id/et_otp_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>
        <EditText
            android:id="@+id/et_otp_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>
        <EditText
            android:id="@+id/et_otp_6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/textPrimary"
            android:background="@drawable/otp_box_background"/>

        <!-- Repeat similar EditTexts up to et_otp_6 -->
        <!-- Or use a library like OTPView if preferred -->

    </LinearLayout>

    <!-- Resend timer -->
    <TextView
        android:id="@+id/tv_resend_timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t get the OTP? (Request again in 0:23s)"
        android:textColor="@color/textSecondary"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/otp_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Buttons for SMS and WhatsApp -->
    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_resend_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:enabled="false"
            android:textColor="@color/textOnPrimary"
            android:drawableLeft="@drawable/ic_sms"
            android:drawableTint="@color/textOnPrimary"
            android:paddingHorizontal="24dp"
            android:background="@drawable/selector_button_background"
            app:backgroundTint="@null"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btn_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textColor="@color/textOnPrimary"
            android:drawableTint="@color/textOnPrimary"
            android:background="@drawable/selector_button_background"
            app:backgroundTint="@null"
            android:enabled="false"
            android:drawableLeft="@drawable/ic_whatsapp"
            android:paddingHorizontal="24dp"/>
    </LinearLayout>

    <!-- Back to login -->
    <TextView
        android:id="@+id/tv_back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to login"
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textAllCaps="false"
        android:background="@drawable/selector_button_background"
        app:backgroundTint="@null"
        android:enabled="false"
        android:textColor="@color/textOnPrimary"
        android:textSize="@dimen/_14ssp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_back_to_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_24sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
