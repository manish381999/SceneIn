<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The fill color is a light, neutral gray from your colors.xml -->
    <solid android:color="@color/gray100" />

    <!-- A high radius creates the "pill" shape -->
    <corners android:radius="24dp" />

    <!-- Optional: a subtle border -->
    <stroke android:width="1dp" android:color="@color/gray200" />

</shape>